<h2>Log for <%= @log.date %> </h2>

<div class="col-md-6">


  <h3>Calories consumed today: <span id="calories"><%=@log.calories_consumed %></span></h3>

  <table class="table" id="foods">
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Calories </th>
    </tr>
  <% if @foods.any? %>
  <%= will_paginate @foods %>
    <% @foods.each do |food| %>
      <tr id="food_<%=food.id%>">
        <td id="food_name"><%= food.name %></td>
        <td id= "food_quantity" ><%= food.quantity %></td>
        <td id= "food_calories"><%= food.calories %></td>
        <td id= "delete_food<"><%= button_to "Delete", log_food_path(food.log, food), method: :delete, remote: true %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<p><%= link_to "Add Food", new_log_food_path(@log), id: "new_food_link", remote: true %></p>
</div>
